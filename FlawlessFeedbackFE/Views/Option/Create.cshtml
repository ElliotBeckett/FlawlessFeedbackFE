@model FlawlessFeedbackFE.Models.Option

@{
    ViewData["Title"] = "Create";
    var id = ViewContext.RouteData.Values["id"];
}

<h1>Create</h1>

<h4>Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(c => c.OptionID)

            <div class="form-group">
                <label asp-for="OptionOrder" class="control-label"></label>
                <input asp-for="OptionOrder" class="form-control" />
                <span asp-validation-for="OptionOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionText" class="control-label"></label>
                <textarea asp-for="OptionText" rows="2" class="form-control" ></textarea>
                <span asp-validation-for="OptionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select Question</label>
                <select id="drpQuestionList" class="form-control" asp-for="QuestionID" asp-items="@(new SelectList(@ViewBag.ListOfQuestions, "Value", "Text"))">
                    <option value="">--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="CreateAndRedirect" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Option" asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}